	void static SortUniversities() {

		int sort;
		cout << "\n Hello, welcome to the sort menu!" << endl;
		cout << "\n Please choose which sort algorithm you wanted to use!" << endl;
		cout << "\n 1. Merge Sort Algorithm" << endl;
		cout << "\n 2. Quick Sort Algorithm" << endl;
		cin >> sort;

		if (sort == 1) {
			void MergeSort();
		}

		else if (sort == 2) {
			void QuickSort();
		}

		else {
			cout << "\n The number you inserted is invalid!" << endl;
			cout << "\n please re - enter your choice!" << endl;
			void SortUniversities();
		}


	}

