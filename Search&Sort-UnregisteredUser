	void static SearchUniversities() {

		int search;
		cout << "\n Hello, welcome to the search menu!" << endl;
		cout << "\n Please choose which search algorithm you wanted to use!" << endl;
		cout << "\n 1. Binary Search Algorithm" << endl;
		cout << "\n 2. Interpolation Search Algorithm" << endl;
		cin >> search;

		if (search == 1) {
			void BinarySearch();
		}

		else if (search == 2) {
			void InterpolationSearch();
		}

		else {
			cout << "\n The number you inserted is invalid!" << endl;
			cout << "\n please re - enter your choice!" << endl;
			void SearchUniversities();
		}

	}

